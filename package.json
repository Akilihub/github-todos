{
  "name": "probot",
  "version": "1.0.0",
  "description": "A Probot app",
  "author": "lubegasimon <lubegasimonwalker@gmail.com>",
  "license": "ISC",
  "repository": "https://github.com/lubegasimon/probot.git",
  "homepage": "https://github.com/lubegasimon/probot",
  "bugs": "https://github.com/lubegasimon/probot/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "npm run build && probot run ./dist/main.js",
    "lint": "'src/**/*.tsx' 'src/**/*.ts",
    "test": "jest && standard",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "probot": "^7.0.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "jest": "^22.4.3",
    "nodemon": "^1.17.2",
    "smee-client": "^1.0.2",
    "standard": "^10.0.3"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest"
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  }
}
